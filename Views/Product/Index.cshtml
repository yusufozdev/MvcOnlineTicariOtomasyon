@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach(var u in Model) 
    { 
        <tr>
            <td>@u.ProductId</td>
            <td>@u.ProductName</td>
            <td>@u.ProductBrand</td>
            <td>@u.ProductStock</td>
            <td>@u.ProductPurchasePrice</td>
            <td>@u.ProductSalesPrice</td>
            <td>@u.Category.CategoryName</td>
            <td>@u.ProductImage</td>
            <td><a href="/Product/UrunSil/@u.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UrunGetir/@u.ProductId" class="btn btn-success">Güncelle</a></td>
        </tr>
     }
</table>
<a href="/Product/YeniUrun" class="btn btn-info">Ekle</a>

